{
  "name": "Pandora",
  "version": "0.0.2",
  "description": "Multi-platform desktop version of Pandora Music",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "watch": "nodemon --exec 'electron .'",
    "watch:dev": "nodemon --exec 'electron . --debug'",
    "postinstall": "electron-builder install-app-deps",
    "pack": "build --dir",
    "dist": "build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "org.rbiggers.pandora",
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon/icon.icns"
    },
    "dmg": {
      "contents": [{
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon/icon.ico"
    }
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^4.0.4",
    "nodemon": "^1.18.10",
    "electron-builder": "^20.38.5"
  },
  "dependencies": {
    "glob": "^7.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbiggers/electron-pandora.git"
  },
  "keywords": [],
  "author": "Russ Biggers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rbiggers/electron-pandora/issues"
  },
  "homepage": "https://github.com/rbiggers/electron-pandora#readme"
}